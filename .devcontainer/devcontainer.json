{
  "image": "mcr.microsoft.com/devcontainers/javascript-node:0-22",
  "customizations": {
    "vscode": {
      "extensions": [
        "svelte.svelte-vscode"
      ]
    }
  },
  "forwardPorts": [5173],
  "portsAttributes": {
    "5173": {
      "label": "Application",
      "onAutoForward": "openBrowser"
    }
  },
  "postCreateCommand": "npm ci && npm run dev -- --open"
}
